doctype html
html(lang="en")
  head
    title= "Add Sketch"
  body
    if enquirySumbitted
      h3 Your Sketch has been added to the database
    else
      .container
        .row: .col-sm-8.col-md-6
          form(method='post')
            input(type='hidden', name='action')
            .form-group
              label Event Name
              input(type='text', name='name')
            .form-group
              label Description
              textarea(name='description', placeholder='sketch description...' rows=4)
            .form-actions
              button(type='submit').btn.btn-primary Send