<div class="item">
    <img src="{{{image}}}" />
    <h1>{{title}}</h1>
    <p><i>saved in {{directory}}</i></p>
    <p>{{description}}</p>
    <input type="text" id="channelInput" onkeyup="channelSearch()" placeholder="Channels...">
    <p>Connected to:</p>
    <ul id="channelList">
        {{#each connectedChannels}}
        <li><a href="#" onclick="deleteConnection('{{../directory}}','{{this.name}}')">{{this.name}} âœ”</a></li>
        {{/each}}
        {{#each unconnectedChannels}}
        <li><a href="#" onclick="createConnection('{{../directory}}','{{this.name}}')">{{this.name}}</a></li>
        {{/each}}
    </ul>
    <button onclick="socket.emit('play', '{{directory}}')">Play</button>
    {{#each files}}
    <div>
        <h4>{{this.filename}}</h4>
        <textarea id="{{../directory}}_{{this.id}}">{{{this.data}}}</textarea>
        <button onclick="updateFile('{{../directory}}', '{{this.filename}}', '{{this.id}}')">Sync</button>
    </div>
    {{/each}}
</div>