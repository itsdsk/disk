<div class="item">
    <img src="{{{image}}}" />
    <h1>{{title}}</h1>
    <p>{{directory}} and {{description}}</p>
    <button onclick="socket.emit('play', '{{directory}}')">Play</button>
    {{#each files}}
        <div>
            <h4>{{this.name}}</h4>
            <textarea id="{{../demo.title}}_{{@index}}">{{{this.text}}}</textarea>
            <button onclick="buttonClicked('{{../demo.title}}', '{{@index}}', '{{this.name}}')">Sync</button>
        </div>
    {{/each}}
</div>