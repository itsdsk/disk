<div class="item">
    <img src="{{{image}}}" />
    <h1>{{title}}</h1>
    <p><i>saved in {{directory}}</i></p>
    <p>{{description}}</p>
    <p>Connected to:</p>
    <ul>
        {{#each connectedChannels}}
        <li onclick="deleteConnection('{{../directory}}','{{this.name}}')">{{this.name}}</li>
        {{/each}}
    </ul>
    <p>Disconnected from:</p>
    <ul>
        {{#each unconnectedChannels}}
        <li onclick="createConnection('{{../directory}}','{{this.name}}')">{{this.name}}</li>
        {{/each}}
    </ul>
    <button onclick="socket.emit('play', '{{directory}}')">Play</button>
    {{#each files}}
    <div>
        <h4>{{this.filename}}</h4>
        <textarea id="{{../title}}_{{this.id}}">{{{this.data}}}</textarea>
        <button onclick="updateFile('{{../title}}', '{{this.id}}')">Sync</button>
    </div>
    {{/each}}
</div>